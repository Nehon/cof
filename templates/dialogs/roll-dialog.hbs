{{!-- 
   useSkillRoll: skillRoll !== undefined,
            mod: mod,
            bonus: actor.data.data.globalRollBonus,
            critrange: critRange,
            difficulty: diff,
            difficultyEditable: diffEditable,
            targetName: targetName,
            dice: dice,
            dmgRoll: dmgRoll --}}
{{#if useSkillRoll}}
    <div class="row flexrow table-header red">
        <div class="flex1 center">
            <h3>{{localize 'COF.ui.skillcheck'}}</h3>
        </div>
    </div>
    <div class="flexrow" style="margin-bottom: 1px;">
        <div class="flex1 center bg-red">
            <label for="dice">{{localize 'COF.ui.dice.type'}}</label>
        </div>
        <div class="flex1 center cell">
            <select class="flex1" name="dice" id="dice" data-type="String">
                {{#select dice}}
                <option value="1d20">1d20</option>
                <option value="1d12">1d12</option>
                <option value="2d12kh">2d12 ({{localize 'COF.ui.kh'}})</option>
                <option value="2d20kh">2d20 ({{localize 'COF.ui.kh'}})</option>
                <option value="2d12kl">2d12 ({{localize 'COF.ui.kl'}})</option>
                <option value="2d20kl">2d20 ({{localize 'COF.ui.kl'}})</option>
                {{/select}}
            </select>
        </div>
    </div>
    <div class="row flexrow" style="margin-bottom: 1px;">
        <div class="flex1 center bg-red">
            <span class="field-label">{{localize 'COF.ui.modifier'}}</span>
        </div>
        <div class="flex1 center cell">
            <input class="field-value readonly" id="mod" name="mod" type="text" readonly="true" value="{{numberFormat mod decimals=0 sign=true}}" data-dtype="Number"/>     
        </div>
    </div>
    <div class="row flexrow" style="margin-bottom: 1px;">
        <div class="flex1 center bg-red">
            <span class="field-label">{{localize 'COF.ui.critrange'}}</span>
        </div>
        <div class="flex1 center cell">
            <input class="field-value" id="critrange" name="critrange" type="text" value="{{critrange}}" data-dtype="String"/>
        </div>
    </div>
    <div class="row flexrow" style="margin-bottom: 1px;">
        <div class="flex1 center bg-red">
            <span class="field-label">{{localize 'COF.ui.bonus'}}/{{localize 'COF.ui.malus'}}</span>
        </div>
        <div class="flex1 center cell">
            <input class="field-value" id="bonus" name="bonus" type="text" value="{{numberFormat bonus decimals=0 sign=true}}" data-dtype="Number"/>
        </div>
    </div>
    <hr/>
    <!-- Target -->    
    {{#if displayTarget}}
        <div class="row flexrow" style="margin-bottom: 1px; line-height: 1.8;">
            <div class="flex1 center bg-darkslate">
                <span class="field-label">{{localize 'COF.ui.target'}}</span>
            </div>
            <div class="flex1 center cell">
                {{#if targetName}}
                    {{targetName}}        
                {{else}}
                    {{localize 'COF.ui.noTarget'}}
                {{/if}}
            </div>
        </div>
    {{/if}}
    {{#if (isEnabled "displayDifficulty")}}
        <!-- DIFFICULTY -->
        <div class="row flexrow" style="margin-bottom: 5px;">
            <div class="flex1 center bg-darkslate">
                <span class="field-label">{{localize 'COF.ui.difficulty'}}</span>
            </div>
            <div class="flex1 center cell">
                <input class="field-value" id="difficulty" name="difficulty" {{readonly difficultyReadonly}} type="text" value="{{difficulty}}" data-dtype="Number"/>
            </div>
        </div>
        <hr/>
    {{/if}}
{{/if}}    

{{#if useDmgRoll}}
    {{#if (equals type 'damage')}}
        <div class="row flexrow table-header red">
            <div class="flex1 center">
                <h3>{{ localize "COF.message.damage"}}</h3>
            </div>
        </div>
    {{else}}
        <div class="row flexrow table-header green">
            <div class="flex1 center">
                <h3>{{ localize "COF.message.heal"}}</h3>
            </div>
        </div>
    {{/if}}
    <!-- DAMAGES -->
    {{> "systems/cof/templates/dialogs/parts/roll-dmg-fields.hbs"}}
{{/if}}
{{#if (not useSkillRoll)}}
 <!-- Target -->    
    {{#if displayTarget}}
        <div class="row flexrow" style="margin-bottom: 10px; line-height: 1.8;">
            <div class="flex1 center bg-darkslate">
                <span class="field-label">{{localize 'COF.ui.target'}}</span>
            </div>
            <div class="flex1 center cell">
                {{#if targetName}}
                    {{targetName}}        
                {{else}}
                    {{localize 'COF.ui.noTarget'}}
                {{/if}}
            </div>
        </div>
    {{/if}}
{{/if}}
