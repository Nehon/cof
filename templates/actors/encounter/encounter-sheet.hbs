<form class="{{cssClass}}" autocomplete="off">
    <div class="wrap">
        <div class="header">
            <div class="flexrow header-background no-wrap">
                <div class="flex1 left">
                    <div id="banner-left"></div>
                </div>
                <div class="flex1 right">
                    <div id="banner-right"></div>
                </div>
            </div>
            <div class="flexrow">
                <div class="flex1 center" id="logo-banner"><img src="/systems/cof/ui/logo-banner.png"/></div>
            </div>
           
        </div>
        <div class="main">
            <section class="sheet-body">                      
                <div class="tab stats" data-group="primary" data-tab="stats">   
                    {{> "systems/cof/templates/actors/encounter/parts/encounter-stats.hbs"}}                    
                </div>            
                <div class="tab capacities" data-group="primary" data-tab="skill-tree" style="margin-top:20px">
                     {{> "systems/cof/templates/actors/encounter/parts/capacities/encounter-skill-tree.hbs"}} 
                </div>
                <div class="tab inventory" data-group="primary" data-tab="inventory" style="margin-top:20px">
                     {{> "systems/cof/templates/actors/character/parts/inventory/character-inventory.hbs"}} 
                </div>
                {{#if options.isGM}}
                    <div class="tab effects" data-group="primary" data-tab="effects" style="margin-top:20px">                      
                         {{> "systems/cof/templates/actors/character/parts/character-effects.hbs"}}
                    </div>     
                {{/if}}                 
            </section>
        </div>
        <div class="flexrow"><div class="flex1 spacer"></div></div>            
        <nav class="sheet-tabs flexrow center" data-group="primary" style="position:absolute;bottom: 0px;line-height:1;width:100%;height:20px">
                <a class="center" data-tab="stats">                    
                    <span class="tab-button"><img src="systems/cof/ui/icons/status/id-card.svg">{{ localize "COF.tabs.stats" }}</span>                     
                </a>                
                <a class="center compendium-pack" data-pack="item" data-open="0" data-tab="inventory">                    
                    <span class="tab-button"><img src="systems/cof/ui/icons/status/battle-gear.svg">{{ localize "COF.tabs.inventory" }}</span>
                </a>                
                <a class="center compendium-pack" data-pack="path" data-open="0" data-tab="skill-tree">                    
                    <span class="tab-button"><img src="systems/cof/ui/icons/status/secret-book.svg">{{ localize "COF.tabs.paths" }} & {{ localize "COF.tabs.capacities" }}</span>
                </a>               
                {{#if options.isGM}}    
                    <a class="center" data-tab="effects">                        
                        <span class="tab-button"><img src="systems/cof/ui/icons/status/heat-haze.svg">{{ localize "COF.tabs.effects" }}</span>
                    </a>
                {{/if}} 
        </nav> 
    </div>
</form>

