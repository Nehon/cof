{{!#if (isEmpty (getActiveCapacities actor.items))}}
<!--<p class="empty">Aucune capacité n'a été sélectionnée pour le moment</p>-->
{{!else}}
    <ol class="inventory-list capacity-list p{{countPaths actor.items}}">
        <li class="inventory-header flexrow">
            <h3 class="item-name flexrow">Capacités actives</h3>
            <div class="item-detail">Rang</div>
            <div class="item-detail">L</div>
            <div class="item-detail">S</div>
            <div class="item-controls">
                <a class="item-control item-create compendium-pack" data-pack="encounters-capacity" data-open="0" title="Ajouter une capacité"><i class="fas fa-plus"></i>&nbsp; Aj.</a>
            </div>
        </li>
        {{#each (getCapacities actor.items) as |capacity id|}}
            <ol class="item-list">
                <!--            <li class="item flexrow" data-item-id="{{capacity._id}}" data-item-type="capacity" draggable="true">-->
                <li class="item flexrow" data-item-id="{{capacity._id}}" data-item-type="item" data-item-type="item" draggable="true">
                    <div class="item-name flexrow">
                        <div class="item-image" style="background-image: url('{{capacity.img}}')"></div>
                        <h4>{{capacity.name}}</h4>
                    </div>
                    {{#with (getPath ../actor.items capacity.data.path)}}
                        {{{name}}}
                    {{/with}}
                    <div class="item-detail">{{#if capacity.data.rank}}{{capacity.data.rank}}{{/if}}</div>
                    <div class="item-detail">{{#if capacity.data.limited}}L{{/if}}</div>
                    <div class="item-detail">{{#if capacity.data.spell}}&#10033;{{/if}}</div>
                    <div class="item-controls">
                        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                    </div>
                    <div class="item-summary" style="display: none">
                        {{{capacity.data.description}}}
                        <div class="item-properties">
                            {{#if capacity.data.spell}}<span class="tag">Sort</span>{{/if}}
                            {{#if capacity.data.limited}}<span class="tag">Action limitée</span>{{/if}}
                        </div>
                    </div>
                </li>
            </ol>
        {{/each}}
    </ol>
{{!/if}}