<div class="flexrow table-header darkslate no-wrap">
    <div class="flex8 center">
        <div class="field-label ellipsis">{{ localize 'COF.attributes.resources.label' }}</div>
    </div>
    <div class="flex3 center">
        <div class="field-label">{{ localize 'COF.ui.value' }}</div>
    </div>    
    <div class="flex3 center">
        <div class="field-label">{{ localize 'COF.ui.bonus' }}</div>
    </div>
    <div class="flex3 center">
        <div class="field-label">{{ localize 'COF.ui.max' }}</div>
    </div>
</div>
{{#if (isEnabled "useFortune")}}
<div class="flexrow no-wrap">
    <div class="flex8 center bg-darkslate">
        <span class="field-label ellipsis"><i class="fas fa-star"></i>&nbsp;{{ localize 'COF.attributes.fp.abbrev' }}</span>
    </div>
    <div class="flex3 center cell">
        <input class="field-value" name="data.attributes.fp.value" type="text" value="{{actor.data.attributes.fp.value}}" placeholder="Value" data-dtype="Number"/>
    </div>
    <div class="flex3 center cell">
        <input class="field-value" name="data.attributes.fp.bonus" type="text" value="{{actor.data.attributes.fp.bonus}}" placeholder="Bonus" data-dtype="Number"/>
    </div>
    <div class="flex3 center cell tooltip readonly">
        <input class="field-value" name="data.attributes.fp.max" type="text" readonly="true" value="{{actor.data.attributes.fp.max}}" placeholder="Max" data-dtype="Number"/>
        {{info 'left' (localize 'COF.stats.base.abbrev') data.attributes.fp.base (localize 'COF.attributes.bonus.abbrev') data.attributes.fp.bonus  (localize 'COF.ui.buff') data.attributes.fp.buff}}
    </div>
</div>
{{/if}}
