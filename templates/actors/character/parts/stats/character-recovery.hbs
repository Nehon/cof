{{#if (isEnabled "useRecovery")}}
    <div class="flexrow table-header green no-wrap">
        <div class="flex8 center">
            <div class="field-label ellipsis">{{ localize 'COF.attributes.recovery.label' }}</div>
        </div>
        <div class="flex3 center">
            <div class="field-label">{{ localize 'COF.ui.value' }}</div>
        </div>
        <div class="flex3 center">
            <div class="field-label">{{ localize 'COF.ui.bonus' }}</div>
        </div>
        <div class="flex3 center">
            <div class="field-label">{{ localize 'COF.ui.max' }}</div>
        </div>
    </div>
    <div class="flexrow no-wrap">
        <div class="flex8 center bg-green">
            <span class="field-label ellipsis"><i class="fas fa-heartbeat"></i>&nbsp;{{ localize 'COF.attributes.rp.abbrev' }}</span>
        </div>
        <div class="flex3 center cell">
            <input class="field-value" name="data.attributes.rp.value" type="text" value="{{actor.data.attributes.rp.value}}" placeholder="Value" data-dtype="Number"/>
        </div>
        <div class="flex3 center cell">
            <input class="field-value" name="data.attributes.rp.bonus" type="text" value="{{actor.data.attributes.rp.bonus}}" placeholder="Bonus" data-dtype="Number"/>
        </div>
        <div class="flex3 center cell readonly tooltip">
            <input class="field-value" name="data.attributes.rp.max" readonly="true" type="text" value="{{actor.data.attributes.rp.max}}" placeholder="Max" data-dtype="Number"/>
            {{info 'left' (localize 'COF.stats.base.abbrev') data.attributes.rp.base (localize 'COF.attributes.bonus.abbrev') data.attributes.rp.bonus  (localize 'COF.ui.buff') data.attributes.rp.buff}}
        </div>
    </div>
    <div class="flexrow"><div class="flex1 half-spacer"></div></div>
{{/if}}